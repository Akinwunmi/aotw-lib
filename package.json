{
  "name": "aotw-lib",
  "version": "0.0.6",
  "description": "Archive of the World Theme and Component Library",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "scripts": {
    "build": "rimraf dist && rollup -c && npm run copy",
    "copy": "cp package.json dist && cp README.md dist && cp .npmignore dist",
    "prepublish": "npm run build",
    "publish": "cd dist && npm publish",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "rimraf dist && rollup -c -w && npm run copy"
  },
  "types": "./src/global.d.ts",
  "author": "Jurrit van der Ploeg <info@jurritvanderploeg.nl> (http://www.jurritvanderploeg.nl/)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Akinwunmi/aotw-lib.git"
  },
  "keywords": [
    "Library",
    "Lit",
    "Reusable Components",
    "SCSS",
    "Shadow DOM",
    "Theme",
    "TypeScript",
    "Web Components"
  ],
  "license": "MIT",
  "dependencies": {
    "lit": "^2.1.2"
  },
  "devDependencies": {
    "postcss": "^8.4.5",
    "rimraf": "^3.0.2",
    "rollup": "^2.66.1",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-typescript2": "^0.31.1",
    "sass": "^1.49.0",
    "typescript": "^4.5.5"
  }
}
