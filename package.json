{
  "name": "aotw-lib",
  "version": "0.0.6",
  "description": "Archive of the World Theme and Component Library",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "scripts": {
    "build": "rimraf dist && rollup -c && npm run copy",
    "copy": "copy package.json dist && copy README.md dist && copy .npmignore dist",
    "prepublish": "npm run build",
    "publish": "cd dist && npm publish",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "rimraf dist && rollup -c -w && npm run copy",
    "storybook": "npm run build && start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "types": "./src/global.d.ts",
  "author": "Jurrit van der Ploeg <info@jurritvanderploeg.nl> (http://www.jurritvanderploeg.nl/)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Akinwunmi/aotw-lib.git"
  },
  "keywords": [
    "Library",
    "Lit",
    "Reusable Components",
    "SCSS",
    "Shadow DOM",
    "Theme",
    "TypeScript",
    "Web Components"
  ],
  "license": "MIT",
  "dependencies": {
    "lit": "^2.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@storybook/addon-actions": "^6.4.19",
    "@storybook/addon-essentials": "^6.4.19",
    "@storybook/addon-links": "^6.4.19",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/web-components": "^6.4.19",
    "babel-loader": "^8.2.3",
    "css-loader": "^5.1.1",
    "postcss": "^8.4.5",
    "rimraf": "^3.0.2",
    "rollup": "^2.66.1",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-postcss-lit": "^2.0.0",
    "rollup-plugin-typescript2": "^0.31.1",
    "sass": "^1.49.0",
    "sass-loader": "^10.1.1",
    "style-loader": "^2.0.0",
    "typescript": "^4.5.5"
  }
}
